<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Pocket_Pantry.ListViewPage1" Title="Pantry" Icon="baseline_account_box_black_18dp.png">
    <!-- Can change title of tab or icon image ^ -->

<ContentPage.Content>
    <StackLayout>
        <!-- TODO: Adjust Search bar to show lower -->
    <SearchBar x:Name="PantrySearchBar" TextChanged="PantrySearchBar_OnTextChanged" Margin="0,60,0,0">

    </SearchBar>

  <ListView x:Name="MyListView"
            ItemsSource="{Binding Items}"
            ItemTapped="MyListView_OnItemTapped" 
            CachingStrategy="RecycleElement"
            Margin="-20,0,0,0">

    <!--Built in Cells-->
    <ListView.ItemTemplate>
        <DataTemplate>
            <TextCell Text="{Binding .}" />
        </DataTemplate>
    </ListView.ItemTemplate>

    <!--Custom View Cells-->
    <!--
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
          <StackLayout>
            <Label Text="{Binding Text}" 
                   Style="{DynamicResource ListItemTextStyle}" />
            <Label Text="{Binding Detail}" 
                   Style="{DynamicResource ListItemDetailTextStyle}"/>
          </StackLayout>
        </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
    -->


    </ListView>
        </StackLayout>
   </ContentPage.Content>
</ContentPage>
